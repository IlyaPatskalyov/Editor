@model Editor.Front.Models.EditorModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Editor</title>
    <link rel="stylesheet" href="~/Content/site.css"/>
    <link rel="stylesheet" href="~/Content/bootstrap.css"/>
    <link rel="stylesheet" href="~/Content/bootstrap-theme.css"/>
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <a href="/" class="navbar-brand">Editor</a>
            <ul class="nav navbar-text navbar-right">
                <li>User @Model.UserId</li>
            </ul>
        </div>
    </div>
</div>
<div class="container body-content">
    <h2>Document @Model.DocumentId</h2>

    <div class="editor">
        <textarea class="editor__textarea" id="EditorTextArea"></textarea>
    </div>
    <form action="/Editor/@(Model.DocumentId)/Save" method="POST">
        <input type="submit" class="btn btn-primary" value="Сохранить"/>
    </form>

</div>

<script src="~/Scripts/jquery-1.9.1.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/site.js"></script>
<script src="~/Scripts/bridge/bridge.js"></script>
<script src="~/Scripts/bridge/Editor.Client.js"></script>
<script>
    new Editor.Client.EditorPageController('@Model.DocumentId')
</script>
</body>
</html>